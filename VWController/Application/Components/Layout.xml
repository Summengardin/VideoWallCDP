<Component Model="VideoWallLib.Layout" Name="Layout" src="Components/Layout.xml" Description="Simple component">
  <SchedulingOrder>TopDown</SchedulingOrder>
  <SchedulingGroup>Default</SchedulingGroup>
  <fs>5</fs>
  <Status>0</Status>

  <Signals>
    <Signal Description="Process run time each s." Input="0" Model="CDPSignal&lt;double&gt;" Name="Process Timer" Type="double" Unit="s/s"></Signal>
    <Signal Description="Process interval [s]." Input="0" Model="CDPSignal&lt;double&gt;" Name="Process Period" Type="double" Unit="s"></Signal>
    <Signal Input="1" Model="CDPSignal&lt;string&gt;" Name="Source01" Type="string"></Signal>
    <Signal Input="1" Model="CDPSignal&lt;string&gt;" Name="Source02" Type="string"></Signal>
    <Signal Input="1" Model="CDPSignal&lt;string&gt;" Name="Source03" Type="string"></Signal>
    <Signal Input="1" Model="CDPSignal&lt;string&gt;" Name="Source04" Type="string"></Signal>
    <Signal Input="1" Model="CDPSignal&lt;string&gt;" Name="Source11" Type="string"></Signal>
    <Signal Input="1" Model="CDPSignal&lt;string&gt;" Name="Source12" Type="string"></Signal>
    <Signal Input="1" Model="CDPSignal&lt;string&gt;" Name="Source13" Type="string"></Signal>
    <Signal Input="1" Model="CDPSignal&lt;string&gt;" Name="Source14" Type="string"></Signal>
  </Signals>

  <Alarms>
    <Alarm Description="A component was suspended!" Name="Component Suspended" Text="Component was suspended!"></Alarm>
    <Alarm Description="Alarm is triggered (with Text containing the list of errors) when some node of the component (like operator) has configuration fault." Level="Error" Name="ConfigurationFaults"></Alarm>
  </Alarms>

  <Ports>
    <Port Input="0" Model="VideoWallLib.LayoutPort" Name="pLayout">

      <Connections>
        <Connection Input="1" LocalName=".Source01" Model="CDPPortConnection" Name="MapSource01"></Connection>
        <Connection Input="1" LocalName=".Source02" Model="CDPPortConnection" Name="MapSource02"></Connection>
        <Connection Input="1" LocalName=".Source03" Model="CDPPortConnection" Name="MapSource03"></Connection>
        <Connection Input="1" LocalName=".Source04" Model="CDPPortConnection" Name="MapSource04"></Connection>
        <Connection Input="1" LocalName=".Source05" Model="CDPPortConnection" Name="MapSource05"></Connection>
      </Connections></Port>
  </Ports>
</Component>