    <Port Input="1" Model="VideoWallLib.LayoutPort" Name="LayoutPort1" Routing="..Layout1.pLayout" Source01="Camera08" Source02="Camera07" Source03="Camera06" Source04="Camera05" Source12="Camera03" Source13="Camera02" Source14="Camera01">

      <Connections>
