<Component Model="PortMUX" Name="PortMUX" src="Components/PortMUX.xml" Description="A multiplexer component that forwards one input port to one output port selected by Index where Index=0 selects the first input port." NoSwitchDelay="0">
  <SchedulingOrder>TopDown</SchedulingOrder>
  <SchedulingGroup>Default</SchedulingGroup>
  <fs>100</fs>
  <Status>0</Status>

  <Signals>
    <Signal Description="Process run time each s." Input="0" Model="CDPSignal&lt;double&gt;" Name="Process Timer" Type="double" Unit="s/s"></Signal>
    <Signal Description="Process interval [s]." Input="0" Model="CDPSignal&lt;double&gt;" Name="Process Period" Type="double" Unit="s"></Signal>
    <Signal Description="Selects which input port is currently active in the multiplexer." Input="1" Model="CDPSignal&lt;unsigned short&gt;" Name="Index" Type="unsigned short" Routing="..LayoutSelector"></Signal>
  </Signals>

  <Alarms>
    <Alarm Description="A component was suspended!" Name="Component Suspended" Text="Component was suspended!"></Alarm>
